#!/usr/bin/env python3

import sys

logfile = sys.argv[1]
with open(logfile) as f:
  for line in f:
    if "CRON" not in line:
      continue
    print(line.strip())
    
  #using a regular expression
  
  import re
  pattern = r"USER \((\(w+)\)$"
  line = "Jul 6 14:04:01 computer.name...."
  result = re.search(pattern, line)
  print(result[1])
  
