//this can be used isntead of an if/else statement
def is_even(number):
  if number % 2 == 0:
      return True
     return False
     
 // using elif
 def hint_username(username):
  if len(username) < 3:
    print("invalid username")
  elif len(username) > 15:
    print("too long")
  else:
    print("Valid")


price = 7.5
with_tax = price * 1.09
print(price, with_tax) //answer is 1.5, 8.175

print("Base price: ${:.2f}. With tax: ${:.2f}".format(price, with_tax))
// Base price: $7.50. With tax: $8.18
//the formatting expression {:.2f} means that youâ€™d format this as a float number, with two digits after the decimal dot.

def to_celsius(x):
  return (x-32)*5/9
for x in range(0, 101, 10):
  print("{:>3} F | :>6.2f} C".format(x, to_celsius(x)))
  //aligned to the right for 3 spaces
  // :>6 want to align it to the right at 6 spaces
  //the expression {:>3.2f} would align the text three spaces to the right, as well as specify a float number with two decimal places.
